<?xml version="1.0" encoding="utf-8"?>
<!-- Login screen layout.
     Wrapped in a ScrollView so it scrolls if the keyboard covers fields on smaller devices. -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Main vertical layout for stacking elements -->
    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/spacing_lg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Lock icon at the top (visual cue for login) -->
        <ImageView
            android:src="@android:drawable/ic_lock_lock"
            android:contentDescription="@string/login_title"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/spacing_lg"/>

        <!-- Title for the page ("Sign in") -->
        <TextView
            android:text="@string/login_title"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Username -->
        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp"
            android:hint="@string/login_username_hint"
            android:inputType="text"
            android:autofillHints="username" />

        <!-- Password -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp"
            android:hint="@string/login_password_hint"
            android:inputType="textPassword"
            android:autofillHints="password" />

        <!-- "Remember me" option -->
        <CheckBox
            android:id="@+id/cbRemember"
            android:text="@string/login_remember_me"
            android:layout_marginTop="@dimen/spacing_md"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Login button -->
        <Button
            android:id="@+id/btnLogin"
            android:text="@string/login_button"
            android:layout_marginTop="@dimen/spacing_lg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Register Text -->
        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_account_register_here"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="?attr/colorPrimary"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>
    </LinearLayout>
</ScrollView>
