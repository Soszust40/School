<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for one post "card" in the feed or profile list.
     Uses MaterialCardView for a modern look with elevation and rounded corners. -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_md"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardUseCompatPadding="true">

    <!-- Stack post content vertically -->
    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/spacing_md"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title + subtitle -->
        <TextView
            android:id="@+id/tvTitle"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- NEW: Distance indicator (only visible on "For You" tab with location) -->
        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="2dp"
            android:visibility="gone" />

        <!-- Main body text -->
        <TextView
            android:id="@+id/tvText"
            android:layout_marginTop="@dimen/spacing_sm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Optional lyrics -->
        <TextView
            android:id="@+id/tvLyrics"
            android:textStyle="italic"
            android:layout_marginTop="@dimen/spacing_sm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- Optional clip -->
        <TextView
            android:id="@+id/tvClip"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- Song reference -->
        <TextView
            android:id="@+id/tvSong"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/spacing_sm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- Footer row: likes, comments, and delete button -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_sm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvComments"
                android:layout_marginStart="@dimen/spacing_lg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Spacer to push buttons to the right -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Like button -->
            <TextView
                android:id="@+id/btnLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â™¡ 0"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp"
                android:padding="8dp"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground" />

            <!-- Delete button (only visible for user's own posts) -->
            <TextView
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ—‘ï¸ Delete"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>