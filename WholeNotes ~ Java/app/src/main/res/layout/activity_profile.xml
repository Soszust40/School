<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:fitsSystemWindows="true">

    <!-- Bottom navigation stays fixed -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu" />

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Profile picture graphic -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivProfilePic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_profile_placeholder"
                android:contentDescription="@string/profile_picture" />

            <!-- Username (read-only, shown at top) -->
            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/profile_username"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Display name field (editable) -->
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/profile_display_name"
                android:inputType="textPersonName"
                android:layout_marginBottom="8dp"
                android:minHeight="48dp"
                android:padding="12dp"
                android:importantForAutofill="no" />

            <!-- Bio field (multi-line, scrolls if needed) -->
            <EditText
                android:id="@+id/etBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/profile_bio"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:gravity="top"
                android:layout_marginBottom="8dp"
                android:importantForAutofill="no" />

            <!-- Public/private toggle -->
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swPublic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_public"
                android:layout_marginBottom="16dp"
                android:minHeight="48dp"
                android:padding="8dp" />

            <!-- Save button -->
            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_save"
                android:layout_marginBottom="8dp" />

            <!-- Logout button -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:layout_marginBottom="16dp" />

            <!-- Empty state message (only shows if user has no posts) -->
            <TextView
                android:id="@+id/tvEmptyProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_no_posts"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp" />

            <!-- RecyclerView list of this userâ€™s posts -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_post" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
